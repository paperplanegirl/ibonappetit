<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>
<%= link_to 'New Restaurant', new_restaurant_path %>
<div class="ui link cards">
  <% @restaurants.each do |restaurant| %>
    <div class="card">
      <div class="image">
        <img src="<%= restaurant.restaurant_profile_img_url %>" alt="" />
      </div>
      <div class="content">
        <div class="header"><%= restaurant.restaurant_name %></div>
        <div class="meta">
          <%= restaurant.cuisine %>
        </div>
        <div class="description">
          <%= restaurant.rating %>
        </div>
      </div>
      <div class="extra content">
        <span class="right floated">
          <%= restaurant.restaurant_city %>
        </span>
        <span>
          <%= restaurant.restaurant_country %>
        </span>
      </div>
      <div class="restaurant-inlineblock">
      <%= link_to 'Show', restaurant %>
      <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
      <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    </div>


    <% end %>

</div>
